// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "title_bar": {
    "show_sign_in": false,
    "show": "never"
  },
  "edit_predictions": {
    "disabled_globs": [".env*"],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "ssh_connections": [
  ],
  "languages": {
    "Shell Script": {
      "format_on_save": "off",
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "4"]
        }
      }
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "off",
      "formatter": [
        {
          "external": {
            "command": "bash",
            "arguments": ["-c", "ruff check --select I --fix - | ruff format -"]
          }
        }
      ]
    },
    "C++": {
      "tab_size": 2
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "lsp": {
    // "ruff": {
    //   "initialization_options": {
    //     "settings": {
    //       "lineLength": 80,
    //       "lint": { "extendSelect": ["I"] }
    //     }
    //   }
    // },
    "rust-analyzer": {
      "binary": {
        "path": "/usr/lib/rustup/bin/rust-analyzer",
        "args": []
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true
          },
          "forwardSearch": {
            "executable": "sioyek",
            "args": [
              "--reuse-window",
              "--inverse-search",
              "zeditor \"%%1\":%%2",
              "--forward-search-file",
              "%f",
              "--forward-search-line",
              "%l",
              "%p"
            ]
          }
        }
      }
    }
  },
  "agent": {
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": false,
    "always_allow_tool_actions": true,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "open": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "dock": "left",
    "default_width": 450,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "theme": "Duskfox - opaque",
  "ui_font_size": 18,
  "agent_font_size": 17,
  "buffer_font_size": 17,
  "buffer_font_features": {
    "liga": false,
    "ss06": true // => test kushagra,
  },
  "buffer_line_height": "comfortable",
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_family": "Iosevka Paper",
  "ui_font_family": ".SystemUIFont",
  "terminal": {
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "gutter": {
    "min_line_number_digits": 2
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "hide_gitignore": false,
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
    "show_tab_bar_buttons": false
  },
  "toolbar": {},
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.venv"
  ],
  "vim": {
    "use_system_clipboard": "never"
  },
  "format_on_save": "off",
  "context_servers": {
    "parseer": {
      "source": "custom",
      "command": "uv",
      "args": [
        "--directory",
        "/home/origami/Dev/projects/python/markitdown_mcp_server",
        "run",
        "markitdown"
      ]
    },
    "context7": {
      "source": "custom",
      "command": "bunx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    }
  },
  "git_panel": {
    "button": true,
    "dock": "right"
  },
  "inline_code_actions": false,
  "experimental.theme_overrides": {
    "search.match_background": "#a07d3a3d",
    // "editor.document_highlight.bracket_background": "#528b8b22",
    "editor.document_highlight.read_background": "#528b8b22",
    "players": [
      {
        "cursor": "#518b8bff",
        "background": "#518b8bff",
        "selection": "#518b8b3d"
      }
