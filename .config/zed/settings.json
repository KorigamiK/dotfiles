// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "languages": {
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "4"]
        }
      }
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": [
            "format",
            "--force-exclude",
            "--stdin-filename",
            "$FILENAME",
            "-"
          ]
        }
      }
    }
  },
  "git": { "inline_blame": { "enabled": false } },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "theme": "Catppuccin Macchiato",
  "ui_font_size": 20,
  "buffer_font_size": 18,
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_family": "Zed Mono",
  "terminal": {
    "working_directory": "current_project_directory",
    "env": { "EDITOR": "zed --wait" }
  },
  "gutter": {
    "code_actions": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "gpu": "integrated"
}
