// Zed settings
//
// For information on how to configure Zed, see the Zed // documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "languages": {
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "4"]
        }
      }
    },
    "Python": {
      "language_servers": [
        "pyright",
        "ruff"
      ],
      "format_on_save": "off",
      "formatter": [
        {
          "external": {
            "command": "bash",
            "arguments": ["-c", "ruff check --select I --fix - | ruff format -"]
          }
        }
      ]
    },
    "C++": {
      "tab_size": 2
    }
  },
  "git": { "inline_blame": { "enabled": false } },
  "lsp": {
    // "ruff": {
    //   "initialization_options": {
    //     "settings": {
    //       "lineLength": 80,
    //       "lint": { "extendSelect": ["I"] }
    //     }
    //   }
    // },
    "rust-analyzer": {
      "binary": {
        "path": "/usr/lib/rustup/bin/rust-analyzer",
        "args": []
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true
          },
          "forwardSearch": {
            "executable": "sioyek",
            "args": [
              "--reuse-window",
              "--inverse-search",
              "zeditor \"%%1\":%%2",
              "--forward-search-file",
              "%f",
              "--forward-search-line",
              "%l",
              "%p"
            ]
          }
        }
      }
    }
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "open": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "dock": "left",
    "default_width": 450,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "theme": "Forestpaper",
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "buffer_font_features": {
    "liga": false,
    "ss06": true // => test
  },
  "buffer_line_height": "comfortable",
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_family": "Iosevka Paper",
  "ui_font_family": ".SystemUIFont",
  "terminal": {
    "working_directory": "current_project_directory",
    "env": { "EDITOR": "zed --wait" }
  },
  "gutter": {
    "code_actions": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "gpu": "integrated",
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.venv"
  ],
  "vim": {
    "use_system_clipboard": "never"
  },
  "format_on_save": "off",
  "experimental.theme_overrides": {},
  "context_servers": {
    "parseer": {
      "settings": {},
      "command": {
        "path": "uv",
        "args": [
          "--directory",
          "/home/origami/Dev/projects/python/markitdown_mcp_server",
          "run",
          "markitdown"
        ]
      }
      // "mcp-server": {
      //   "settings": {},
      //   "command": {
      //     "path": "bun",
      //     "args": [
      //       "/home/origami/Dev/projects/rust/postgres-context-server/server/index.mjs"
      //     ]
      //   }
      // },
    }
  },
  "git_panel": {
    "button": true,
    "dock": "right"
  }
}
